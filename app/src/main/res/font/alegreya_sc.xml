<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Regular weight -->
    <font
        android:fontStyle="normal"
        android:fontWeight="400"
        android:font="@font/alegreya_sc_regular" />
    <font
        android:fontStyle="italic"
        android:fontWeight="400"
        android:font="@font/alegreya_sc_italic" />
    
    <!-- Medium weight -->
    <font
        android:fontStyle="normal"
        android:fontWeight="500"
        android:font="@font/alegreya_sc_medium" />
    <font
        android:fontStyle="italic"
        android:fontWeight="500"
        android:font="@font/alegreya_sc_medium_italic" />
    
    <!-- Bold weight -->
    <font
        android:fontStyle="normal"
        android:fontWeight="700"
        android:font="@font/alegreya_sc_bold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="700"
        android:font="@font/alegreya_sc_bold_italic" />
    
    <!-- Extra Bold weight -->
    <font
        android:fontStyle="normal"
        android:fontWeight="800"
        android:font="@font/alegreya_sc_extrabold" />
    <font
        android:fontStyle="italic"
        android:fontWeight="800"
        android:font="@font/alegreya_sc_extrabold_italic" />
    
    <!-- Black weight -->
    <font
        android:fontStyle="normal"
        android:fontWeight="900"
        android:font="@font/alegreya_sc_black" />
    <font
        android:fontStyle="italic"
        android:fontWeight="900"
        android:font="@font/alegreya_sc_black_italic" />
</font-family>
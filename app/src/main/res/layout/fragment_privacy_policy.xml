<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/privacy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_title"
            android:textAppearance="@style/AppTextAppearance.Display"
            android:textAlignment="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_last_updated"
            android:textAppearance="@style/AppTextAppearance.Caption"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/privacy_policy_content"
            android:textAppearance="@style/AppTextAppearance.Body"
            android:lineSpacingMultiplier="1.4" />

    </LinearLayout>
</ScrollView>
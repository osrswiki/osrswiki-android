<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Success Icon -->
    <ImageView
        android:id="@+id/success_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="@string/donate_success_icon_description"
        app:tint="?colorPrimary" />

    <!-- Thank You Message -->
    <TextView
        android:id="@+id/success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/donate_success_title"
        android:textAppearance="?textAppearanceHeadlineSmall"
        android:textColor="?colorOnSurface"
        android:gravity="center" />

    <!-- Donation Amount -->
    <TextView
        android:id="@+id/donation_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAppearance="?textAppearanceTitleMedium"
        android:textColor="?colorPrimary"
        android:gravity="center" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donate_success_message"
        android:textAppearance="?textAppearanceBodyMedium"
        android:textColor="?colorOnSurfaceVariant"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>
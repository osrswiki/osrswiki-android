<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/about_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_title"
            android:textAppearance="@style/AppTextAppearance.Display"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Version -->
        <TextView
            android:id="@+id/app_version_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTextAppearance.Body"
            android:textAlignment="center"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/about_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Version 1.0 (1)" />

        <!-- Credits Section -->
        <TextView
            android:id="@+id/credits_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/about_credits_title"
            android:textAppearance="@style/AppTextAppearance.Headline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_version_text" />

        <!-- Jagex Credit -->
        <TextView
            android:id="@+id/jagex_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_jagex_title"
            android:textAppearance="@style/AppTextAppearance.TitleBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/credits_title" />

        <TextView
            android:id="@+id/jagex_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_jagex_description"
            android:textAppearance="@style/AppTextAppearance.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jagex_title" />

        <!-- Wiki Credit -->
        <TextView
            android:id="@+id/wiki_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_wiki_title"
            android:textAppearance="@style/AppTextAppearance.TitleBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/jagex_description" />

        <TextView
            android:id="@+id/wiki_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_wiki_description"
            android:textAppearance="@style/AppTextAppearance.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wiki_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wiki_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_wiki_button"
            app:icon="@drawable/ic_open_in_new_24"
            app:iconGravity="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wiki_description" />

        <!-- Wikipedia App Credit -->
        <TextView
            android:id="@+id/wikipedia_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_wikipedia_title"
            android:textAppearance="@style/AppTextAppearance.TitleBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wiki_button" />

        <TextView
            android:id="@+id/wikipedia_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_wikipedia_description"
            android:textAppearance="@style/AppTextAppearance.Body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wikipedia_title" />

        <!-- Privacy Policy Section -->
        <TextView
            android:id="@+id/privacy_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/about_privacy_title"
            android:textAppearance="@style/AppTextAppearance.TitleBold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/wikipedia_description" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/privacy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/about_privacy_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/privacy_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>